<div class="container">
  <h3 class="box-title">Inbox</h3>

  <table>
    <tr>
      <th><button class="button"></button></th>
      <th>Track Info</th>
      <th>Actions</th>
      <th>Share</th>
      <th>Add to a Box</th>
    </tr>
    <% @box.each do |track| %>
    <tr>
        <td>
          <%= link_to "", class: "play", id: track.url do %>
            <i class="material-icons">play_circle_filled</i>
          <% end %>
        </td>
        <td><a class="track-info" href="<%= track.url %>"><%= track.track_info %></a></td>
        <td>
          <%= link_to "/track/#{track.id}", method: 'delete' do %>
            <i class="material-icons">highlight_off</i>
          <% end %>
        </td>
        <td><i class="material-icons">screen_share</i><form id="<%=track.url%>`<%=track.track_info%>" class="share">
          <input type="submit" value="Send"><input class='username' type="text" name="username" value="Enter a username">
        </form></td>
    </tr>
    <% end %>

  </table>
</div>

<footer id="player-footer"><%= render "shared/player" %></footer>
