<div class="container">
  <h3 class="box-title">Inbox</h3>

  <p>
    <strong>User:</strong>
    <%= @current_user.username %>
  </p>

  <table>
    <tr>
      <th></th>
      <th>Track Info</th>
      <th>Created at:</th>
      <th>Updated at:</th>
      <th>Actions</th>
      <th>Share</th>
    </tr>
    <% @box.each do |track| %>
    <tr>
        <td><button class="button play" id="<%=track.url%>">Play</button></td>
        <td><a href="<%= track.url %>"><%= track.track_info %></a></td>
        <td><%= track.created_at %></td>
        <td><%= track.updated_at %></td>
        <td><%= link_to 'Delete', "/track/#{track.id}", :method => 'delete' %></td>
        <td><button class='button'>Share</button></td>
    </tr>
    <% end %>

  </table>
</div>

<%= render "shared/player" %>
