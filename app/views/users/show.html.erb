<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="eight columns">
      <p><strong>Welcome back, </strong><%= @user.username %></p>
    </div>
  </div>
  <div class ="row">
    <% @user.boxes.each do |box| %>
      <div class="three columns">
        <h3 class="box-title">/<a href="/users/<%=@user.id%>/boxes/<%= box.id %>"><%= box.name %></a></h3>
      </div>
    <% end %>
    <div class="three columns">
      <h3 class="box-title">/<a href="/users/<%=@user.id%>/boxes/inbox">Inbox</a></h3>
    </div>
    <div class="row">
      <div class="three columns">
        <h3 class="box-title">/<a href="/users/<%=@user.id%>/boxes/new">Create</a></h3>
      </div>
    </div>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_user_path(@user) %>
  </div>

</div>
