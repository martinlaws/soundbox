<!DOCTYPE html>
<html>
<head>
  <title>SoundBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= google_webfonts_init({
    google: ['Roboto']
  }) %>
</head>
<body>
  <div class="row">
    <nav id="main-nav">
      <% if session[:id] == 0 %>
        <button class="button-primary" href="/">Log in</button>
        <button class="button-primary">Sign up</button>
        <button class="button-primary">My Boxes</button>
      <% else %>
        <h5>You're logged in!</h5>
      <% end %>
    </nav>
  </div>
<%= yield %>

<% console %>
</body>
</html>
