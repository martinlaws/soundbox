<!DOCTYPE html>
<html>
  <head>
    <title>SoundBox</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class="row">
      <nav id="main-nav">
        <% if session[:id] == 0 %>
          <button class="button-primary" href="/">Log in</button>
          <button class="button-primary">Sign up</button>
          <button class="button-primary">My Boxes</button>
        <% else %>
          <%= link_to "/My Boxes", user_path(@current_user), method:'get', id: 'my-boxes' %>
          <a href="/users/<%=@user.id%>/boxes/new", id: 'my-boxes'>/Create.</a>
        <% end %>
      </nav>
    </div>


    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>

    <%= yield %>

  </body>
</html>
