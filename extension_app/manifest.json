{
  "manifest_version": 2,
  "name": "SoundBox",
  "description": "Bringing back the mixtape! On SoundCloud.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "box.png",
    "default_popup": "soundbox_popup.html",
    "default_title": "You're on SoundCloud! Add to SoundBox"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "https://soundcloud.com/*",
    "http://soundbox-app.herokuapp.com/*",
    "cookies",
    "storage"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://soundcloud.com/*"],
      "exclude_matches": ["https://soundcloud.com/connect*"],
      "css": ["soundbox.css"],
      "js": ["jquery-2.1.4.js", "popup_app.js", "soundcloud_auth.js", "out_script.js"]
    }
  ],
  "web_accessible_resources": [
    "box.png"
  ]
}